<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Style.CartonesBingo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cards</item>
        <item name="colorPrimaryVariant">@color/cards</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Cartones_Button.Black" parent="Cartones_button">
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    </style>

    <style name="Cartones_button" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>


</resources>