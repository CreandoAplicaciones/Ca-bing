<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cards">

    <androidx.cardview.widget.CardView
        android:layout_width="265dp"
        android:layout_height="265dp"
        app:layout_constraintTop_toTopOf="@id/imgIcon"
        app:layout_constraintStart_toStartOf="@id/imgIcon"
        app:layout_constraintEnd_toEndOf="@id/imgIcon"
        app:layout_constraintBottom_toBottomOf="@id/imgIcon"
        app:cardCornerRadius="200dp">

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/imgIcon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="200dp">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher_foreground" />
    </androidx.cardview.widget.CardView>



    <Button
        android:id="@+id/btn90"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/cards"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:text="@string/selection_90"
        app:layout_constraintTop_toBottomOf="@id/imgIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn75"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:textColor="@color/cards"
        android:backgroundTint="@color/white"
        android:textSize="22dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:text="@string/selection_75"
        app:layout_constraintTop_toBottomOf="@id/btn90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnTutorial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:textColor="@color/cards"
        android:backgroundTint="@color/white"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:text="@string/selection_tutorial"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
